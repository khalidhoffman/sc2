{
  "name": "sc2",
  "workingDir": "default",
  "tasks" : [
    {
      "name" : "pug-beautify",
      "input": "views/"
    },
    {
      "name" : "js",
      "input": "js/src/",
      "ignore" : ["**/node_modules/**", "**/vendors/**"]
    },
    {
      "name" : "webpack",
      "input": "public/js/src/webpack.config.js"
    },
    {
      "name" : "stylus",
      "input": "public/stylesheets/",
      "output": "public/stylesheets/",
      "options": {
        "koutoSwiss": true
      }
    },
    {
      "name": "css",
      "input": "public/stylesheets/",
      "output": "public/stylesheets/"
    }
  ]
}
